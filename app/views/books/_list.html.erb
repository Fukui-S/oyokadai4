      <div class="row">
        <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill,100,100,format: 'jpeg', fallback:"no_image.jpg" %>
         <table class="table">
           <tbody>
             <tr>
               <th>name</ty>
               <th><%= user.name %></th>
             </tr>
             <tr>
               <th>introduction</th>
               <th><%= user.introduction %></th>
             </tr>
           </tbody>
         </table>
         <div class="row">
           <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary' do %>
           <i class="fas fa-user-cog"></i>
           <% end %>
         </div>
         <h2 class="mt-3">New book</h2>
         <%= form_with model:new_book, local:true do |f| %>
         <div class="field">
             <label>Title</label><br>
             <%= f.text_field :title %>
         </div>
         <div class="field">
             <label>Opinion</label><br>
             <%= f.text_field :body %>
         </div>
         <div class="action">
         <%= f.submit 'Create Book', class: 'btn btn-success' %>
         <% end %>
         </div>
      </div>